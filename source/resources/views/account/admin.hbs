<!--**********************************
            Content body start
        ***********************************-->

<div class="content-body" style="min-height: 932px;">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, Welcome To Account Dashboard! </h4>
                    <span class="ml-1">Admin Dashboard</span>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href='/'>Home</a></li>
                    <li class="breadcrumb-item active"><a href="/account/admin-account">Admin Account</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div id="admin-account-table" class="table-responsive">
                            <section class="ftco-section">
                                <div class="container ">
                                    <div class="row justify-content-center">
                                        <div class="col-md-6 text-center">
                                            <h2 class="heading-section">Admin Accounts</h2>
                                        </div>
                                    </div>
                                    <div class="row flex-row-reverse">
                                        <div class="col-md-3 text-center">
                                            <div class="success-btn-wrapper">
                                                <a id="add-admin-account-btn" class="btn btn-success"><i
                                                        class="fa fa-plus"></i> <span>New admin account</span></a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="table-wrap">
                                                <table class="table table-responsive-xl">
                                                    <thead>
                                                        <tr>
                                                            <th>Full Name</th>
                                                            <th>Username</th>
                                                            <th>Phone Number</th>
                                                            <th>&nbsp;</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="table-body">
                                                        
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--**********************************
            Content body end
        ***********************************-->
    <!--Lock Modal HTML -->
    <div id="lockModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header flex-column">
                    <div class="delete-icon-box">
                        <i class="material-icons">&#xE5CD;</i>
                    </div>						
                    <h4 class="modal-title w-100">Are you sure?</h4>	
                    <button type="button" class="close exit-lock-modal-btn" data-dismiss="modal" aria-hidden="true">&times;</button>
                </div>
                <div class="modal-body">
                    <p>Do you really want to lock this user?</p>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="button" class="btn btn-secondary lock-modal-cancel-btn">Cancel</button>
                    <button type="button" class="btn btn-danger lock-modal-lock-btn">Lock</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="add-admin-account-modal" style="display: true;" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Admin Account</h5>
                    <button type="button" class="close" data-dismiss="modal"><span>Ã—</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="card">
                        <div class="card-body">
                            <div class="basic-form">
                                <form method="POST" id="add-admin-account-form" action="/account/admin/create">
                                    <div class="form-row">
                                        <div class="form-group col-md-12" of="fullname">
                                            <label>Full name</label>
                                            <input type="text" class="form-control required" name="fullname"
                                                placeholder="Enter your full name">
                                            <div class="invalid-feedback animated fadeInUp " style="display: block;">
                                            </div>
                                        </div>
                                        <div class="form-group col-md-12" of="username">
                                            <label>Username</label>
                                            <input type="text" class="form-control required" name="username"
                                                placeholder="Enter your username">
                                            <div class="invalid-feedback animated fadeInUp " style="display: block;">
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6" of="password">
                                            <label>Password</label>
                                            <input type="password" class="form-control required min" name="password"
                                                placeholder="Enter your password">
                                            <div class="invalid-feedback animated fadeInUp  min"
                                                style="display: block;"></div>
                                        </div>
                                        <div class="form-group col-md-6" of="confirm_password">
                                            <label>Confirm password</label>
                                            <input type="password" class="form-control required match"
                                                name="confirm_password" placeholder="Re-enter your password">
                                            <div class="invalid-feedback animated fadeInUp" style="display: block;">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="form-row justify-content-end">
                                        <div class="col-lg-2 ">
                                            <button type="submit" class="btn btn-primary w-100">Save</button>

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {{#if addAccountSuccess}}
    <div class="row justify-content-end fixed-bottom">
        <div class="col-lg-6">
            <div class="alert alert-success left-icon-big alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span><i
                            class="mdi mdi-close"></i></span>
                </button>
                <div class="media">
                    <div class="alert-left-icon-big">
                        <span><i class="mdi mdi-check-circle-outline"></i></span>
                    </div>
                    <div class="media-body">
                        <h5 class="mt-1 mb-1">Congratulations!</h5>
                        <p>You have successfully created an admin account.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    {{#if accountExist}}
    <div class="row justify-content-end fixed-bottom">
        <div class="col-lg-6">
            <div class="alert alert-danger left-icon-big alert-dismissible fade show">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span><i
                            class="mdi mdi-close"></i></span>
                </button>
                <div class="media">
                    <div class="alert-left-icon-big">
                        <span><i class="mdi mdi-alert"></i></span>
                    </div>
                    <div class="media-body">
                        <h5 class="mt-1 mb-1">Add new account failed!</h5>
                        <p>Username already exists in the system</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/if}}
    {{/if}}

</div>


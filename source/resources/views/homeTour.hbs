


    <!--**********************************
        Content body start
    ***********************************-->
    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi, {{admin.fullname}}! Welcome back with Sweet Home</h4>
                    </div>
                </div>
            </div>
            <!-- row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header tour-card-header">
                            <h4 class="card-title tour-title">Home Tour</h4>
                            <div class="tour-filter-wrapper">
                                <div class="btn-group" data-toggle="buttons">
                                    <label class="btn btn-info active all-filter">
                                        <input type="radio" name="status" class="all" value="all" checked="checked"> All
                                    </label>
                                    <label class="btn btn-warning pending-filter">
                                        <input type="radio" name="status" class="pending" value="pending"> Pending
                                    </label>
                                    <label class="btn btn-success accepted-filter">
                                        <input type="radio" name="status" class="accepted" value="accepted"> Accepted
                                    </label>
                                    <label class="btn btn-danger denied-filter">
                                        <input type="radio" name="status" class="denied" value="denied"> Denied
                                    </label>							
                                </div>				
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive home-tour-table">
                                <table class="table table-bordered verticle-middle table-responsive-sm" style="white-space:nowrap;width:100%;">
                                    <thead>
                                        <tr>
                                            <th class="property-name-col" scope="col">Property name</th>
                                            <th class="address-col" scope="col">Address</th>
                                            <th class="seller-col" scope="col">Seller</th>
                                            <th class="customer-col" scope="col">Customer</th>
                                            <th class="appointment-date-col" scope="col">Appointment date</th>
                                            <th class="status-col" scope="col">Status</th>
                                            <th class="action-col" scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-body">
                                        {{!-- Jquery will insert properties here --}}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="paging-wrapper">
                            {{!-- JQuery will generate pagination UI here --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Manage Tour Modal HTML -->
        <div id="manageTourModal" class="modal fade">
            <div class="modal-dialog modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">						
                        <h3 class="modal-title">Home tour management</h3>
                        <button type="button" class="cancel-manage-tour-modal-btn close" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">

                        
                        {{!-- START PROPERTY --}}				
                        <div class="general-section col-12 mb-4">						
                            <h4 class="general-title">Property</h4>
                        </div>
                        <div class="col-md-8 form-group">
                          <label class="form-label">Property name</label>
                          <input type="text" class="form-control property-name" name="propertyName" value="" readonly>
                        </div>
                        <div class="col-12 mb-4">
                          <label class="form-label">Property address</label>
                          <input type="text" class="form-control property-address" name="propertyAddress" readonly>
                        </div>
                        {{!-- END PROPERTY --}}

                        {{!-- START SELLER --}}
                        <div class="seller-section col-12 mb-4">						
                            <h4 class="seller-title">Seller</h4>
                        </div>

                        <div class="col-md-6 form-group">
                          <label class="form-label">Seller name</label>
                          <input type="text" class="form-control seller-name" name="sellerName" readonly>
                        </div>

                        <div class="col-md-6 form-group">
                          <label class="form-label">Seller email</label>
                          <input type="email" class="form-control seller-email" name="sellerEmail" readonly>
                        </div>

                        <div class="col-md-6 form-group mb-4">
                          <label class="form-label">Seller phone number</label>
                          <input type="tel" class="form-control seller-phone-number" name="sellerPhoneNumber" readonly>
                        </div>                    
                        {{!-- END SELLER --}}

                        
                        {{!-- START CUSTOMER --}}
                        <div class="customer-section col-12 mb-4">						
                            <h4 class="customer-title">Customer</h4>
                        </div>

                        <div class="col-md-6 form-group">
                          <label class="form-label">Customer name</label>
                          <input type="text" class="form-control customer-name" name="customerName" readonly>
                        </div>

                        <div class="col-md-6 form-group">
                          <label class="form-label">Customer email</label>
                          <input type="email" class="form-control customer-email" name="customerEmail" readonly>
                        </div>

                        <div class="col-md-6 form-group">
                          <label class="form-label">Customer phone number</label>
                          <input type="tel" class="form-control customer-phone-number" name="customerPhoneNumber" readonly>
                        </div>    

                        <div class="col-md-6 form-group">
                          <label class="form-label">Appointment date: </label>
                          <input type="tel" class="form-control appointment-date" readonly>
                        </div>                
                        {{!-- END CUSTOMER --}}

                        <input type="hidden" class="home-tour-id">
                        <div class="modal-footer">
                            <button class="btn btn-danger deny-btn" value="denied">Deny</button>
                            <button class="btn btn-success accept-btn" value="accepted">Accept</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success Modal HTML -->
        <div id="successModal" class="modal fade">
            <div class="modal-dialog modal-confirm">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="icon-box">
                            <i class="fa fa-check"></i>
                        </div>				
                        <h4 id="successTitle" class="modal-title w-100">Success</h4>	
                    </div>
                    <div class="modal-body">
                        <div id="successMsg" class="text-center">Property has added to database.</div>
                    </div>
                    <div class="modal-footer">
                        <button id="success-modal-btn" class="btn btn-success btn-block" >OK</button>
                    </div>
                </div>
            </div>
        </div>

        {{!-- Error modal HTML --}}
        <div id="errorModal" class="modal fade">
            <div class="modal-dialog modal-confirm">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="icon-box">
                            <i class="material-icons">&#xE5CD;</i>
                        </div>				
                        <h4 id="errorTitle" class="modal-title w-100">Sorry!</h4>	
                    </div>
                    <div class="modal-body">
                        <p id="errorMsg" class="text-center">Your transaction has failed. Please go back and try again.</p>
                    </div>
                    <div class="modal-footer">
                        <button id="error-modal-btn" class="btn btn-danger btn-block">OK</button>
                    </div>
                </div>
            </div>
        </div>

    </div>


    <!--**********************************
        Content body end
    ***********************************-->


   
</div>


    <div class="content-body">
        <div class="container-fluid">
            <div class="row page-titles mx-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Hi, {{admin.fullname}}! Welcome back with Sweet Home</h4>
                    </div>
                </div>
            </div>
            <!-- row -->

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title property-title">Properties</h4>
                            <div class="success-btn-wrapper">
                                <a id="addNewPropertyBtn" class="btn btn-success"><i class="fa fa-plus"></i> <span>Add New Property</span></a>						
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive property-table">
                                <table class="table table-bordered verticle-middle table-responsive-sm" >
                                    <thead>
                                        <tr>
                                            <th class="name-col" scope="col">Name</th>
                                            <th class="category-col" scope="col">Category</th>
                                            <th class="address-col" scope="col">Address</th>
                                            <th class="seller-col" scope="col">Seller</th>
                                            <th class="price-col" scope="col">Price</th>
                                            <th class="status-col" scope="col">Status</th>
                                            <th class="action-col" scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody class="table-body">
                                        {{!-- Jquery will insert properties here --}}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="paging-wrapper">
                            {{!-- JQuery will generate pagination UI here --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add new property Modal HTML -->
        <div id="addPropertyModal" class="modal fade">
            <div class="modal-dialog modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">						
                        <h4 class="modal-title">Add Property</h4>
                        <button type="button" id="cancelFormBtn" class="close" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">					
                        <form id="addForm" class="row g-3" enctype="multipart/form-data">
                            {{!-- START GENERAL --}}
                            <div class="general-section col-12">						
                                <h4 class="general-title">General</h4>
                            </div>
                            <div class="col-md-6 form-group">
                              <label for="inputPropertyName" class="form-label">Property name</label>
                              <input type="text" class="form-control" id="inputPropertyName" name="propertyName" value="" required>
                            </div>
                            <div class="col-md-6">
                              <label for="inputCategory" class="form-label">Category</label>
                              <select id="inputCategory" class="form-select" name="propertyCategory" required>
                                <option value="" disabled selected>Select your option</option>
                                <option value="House">House</option>
                                <option value="Apartment">Apartment</option>
                                <option value="Villa">Villa</option>
                                <option value="Land">Land</option>
                              </select>
                            </div>
                            <div class="col-12">
                              <label for="inputAddress" class="form-label">Address</label>
                              <input type="text" class="form-control" id="inputAddress" name="propertyAddress" required>
                            </div>
                            <div class="col-12">
                              <label for="inputDescription" class="form-label">Description</label>
                              <textarea class="form-control" id="inputDescription" name="propertyDescription" required></textarea>
                            </div>
                            <div class="col-md-6">
                              <label for="inputPrice" class="form-label">Price</label>
                              <input type="number" class="form-control" id="inputPrice" min="0" max="1000000000000" name="propertyPrice" required>
                            </div>

                            <div class="col-md-6">
                              <label for="inputRate" class="form-label">Rate</label>
                              <input type="number" class="form-control" id="inputRate" min="1" max="5" name="propertyRate" required>
                            </div>

                            <div class="col-md-6">
                              <label for="inputStatus" class="form-label">Status</label>
                              <select id="inputStatus" class="form-select" name="propertyStatus" required>
                                <option value="" disabled selected>Select your option</option>
                                <option value="For Sale">For Sale</option>
                                <option value="Sold Out">Sold Out</option>
                              </select>
                            </div>
                            {{!-- END GENERAL --}}

                            {{!-- START FEATURE --}}
                            <div class="feature-section col-12">						
                                <h4 class="feature-title">Features</h4>
                            </div>

                            <div id="featureList" class="col-12">
                                <div class="d-flex align-item-center">
                                    <input type="text" class="form-control" name="propertyFeature" style="width: 70%;" required>                         
                                </div>
                                <br>
                            </div>


                            <div class="col-12 add-new-feature-btn-wrapper">
                                <input id="add-new-feature-btn" type="button" class="btn btn-primary" value="Add new feature">			
                            </div>

                            
                            {{!-- END FEATURE --}}

                            {{!-- START SELLER --}}
                            <div class="seller-section col-12">						
                                <h4 class="seller-title">Seller</h4>
                            </div>

                            <div class="col-md-6 form-group">
                              <label for="inputSellerName" class="form-label">Seller name</label>
                              <input type="text" class="form-control" id="inputSellerName" name="sellerName" required>
                            </div>

                            <div class="col-md-6 form-group">
                              <label for="inputSellerEmail" class="form-label">Email</label>
                              <input type="email" class="form-control" id="inputSellerEmail" placeholder="Ex: abc@gmail.com" name="sellerEmail" required>
                            </div>

                            <div class="col-md-6 form-group">
                              <label for="inputSellerPhoneNumber" class="form-label">Phone number</label>
                              <input type="tel" class="form-control" id="inputSellerPhoneNumber" placeholder="Ex: 0932288755" name="sellerPhoneNumber">
                            </div>                    
                            {{!-- END SELLER --}}
                            
                            {{!-- START PROPERTY IMAGE --}}
                            <div class="image-section col-12">						
                                <h4 class="image-title">Image</h4>
                            </div>
                            <div class="col-md-12 form-group">
                                <label for="inputPreviewImage">Select preview image (just choose one image):</label>
                                <input type="file" id="inputPreviewImage" name="inputPreviewImage" required>
                            </div>
                            <div class="col-md-12 form-group">
                                <label for="inputDetailImage">Select detail image (you can choose multiple images):</label>
                                <input type="file" id="inputDetailImage" name="inputDetailImage" multiple required>
                            </div>
                            {{!-- END PROPERTY IMAGE --}}
                        
                            <div class="modal-footer">
                                <input type="button" id="cancelFormBtn" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                <input type="submit" id="confirmFormBtn" class="btn btn-success confirm-btn" value="Confirm">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>


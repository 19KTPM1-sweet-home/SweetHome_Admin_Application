<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body" style="min-height: 927px;">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome back!</h4>
                    <p class="mb-0">Your profile here</p>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">App</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Profile</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="profile">
                    <div class="profile-head">
                        <div class="photo-content">
                            <div class="cover-photo"></div>
                        </div>
                        <div class="profile-photo">
                            <img src="{{#if admin.avatar}}{{admin.avatar}}{{else}}https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png{{/if}}" class="img-fluid rounded-circle" style="
                            width: 200px;
                            height: 200px;"
                                alt="avatar">
                        </div>
                        <div class="profile-info">
                            <div class="col">
                                <div class="row">
                                    <div class="col-lg-4 col-sm-4 border-right-1 prf-col">
                                        <div class="profile-name">
                                            <h4 class="text-primary">{{admin.fullname}}</h4>
                                            {{#if admin.job}}
                                            <p class="text-muted">{{admin.job}}</p>
                                            {{else}}
                                            <p class="text-muted">Job: Unknown</p>
                                            {{/if}}

                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-sm-4 border-right-1 prf-col">
                                        <div class="profile-email">
                                            {{#if admin.email}}
                                            <h4 class="text-muted">{{admin.email}}</h4>
                                            {{else}}
                                            <h4 class="text-muted">Unknown</h4>
                                            {{/if}}
                                            <p>Email</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4 col-sm-4 prf-col">
                                        <div class="profile-call">
                                            {{#if admin.phoneNumber}}
                                            <h4 class="text-muted">{{admin.phoneNumber}}</h4>
                                            {{else}}
                                            <h4 class="text-muted">Unknown</h4>
                                            {{/if}}
                                            <p>Phone No.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="profile-tab">
                            <div class="custom-tab-1">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item "><a href="#about-me" data-toggle="tab" class="nav-link active"
                                            aria-selected="true">About
                                            Me</a>
                                    </li>
                                    <li class="nav-item"><a href="#profile-settings" data-toggle="tab"
                                            class="nav-link">Setting</a>
                                    </li>
                                    <li class="nav-item"><a href="#account-settings" data-toggle="tab"
                                            class="nav-link">Security</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div id="about-me" class="tab-pane fade show active">
                                        <div class="profile-personal-info pt-4 border-bottom-1 pb-4">
                                            <h4 class="text-primary mb-4">Personal Information</h4>
                                            <div class="row mb-4">
                                                <div class="col-3">
                                                    <h5 class="f-w-500">Name <span class="pull-right">:</span>
                                                    </h5>
                                                </div>
                                                <div class="col-9">
                                                    <h6>{{admin.fullname}}</h6>
                                                </div>
                                            </div>
                                            <div class="row mb-4">
                                                <div class="col-3">
                                                    <h5 class="f-w-500">Email <span class="pull-right">:</span>
                                                    </h5>
                                                </div>
                                                {{#if admin.email}}
                                                <div class="col-9">
                                                    <h6>{{admin.email}}</h6>
                                                </div>
                                                {{else}}
                                                <div class="col-9">
                                                    <h6>Unknown</h6>
                                                </div>
                                                {{/if}}
                                            </div>

                                            <div class="row mb-4">
                                                <div class="col-3">
                                                    <h5 class="f-w-500">Job <span class="pull-right">:</span>
                                                    </h5>
                                                </div>
                                                {{#if admin.job}}
                                                <div class="col-9">
                                                    <h6>{{admin.job}}</h6>
                                                </div>
                                                {{else}}
                                                <div class="col-9">
                                                    <h6>Unknown</h6>
                                                </div>
                                                {{/if}}
                                            </div>

                                            <div class="row mb-4">
                                                <div class="col-3">
                                                    <h5 class="f-w-500">Age <span class="pull-right">:</span>
                                                    </h5>
                                                </div>
                                                {{#if admin.age}}
                                                <div class="col-9">
                                                    <h6>{{admin.age}}</h6>
                                                </div>
                                                {{else}}
                                                <div class="col-9">
                                                    <h6>Unknown</h6>
                                                </div>
                                                {{/if}}

                                            </div>
                                            <div class="row mb-4">
                                                <div class="col-3">
                                                    <h5 class="f-w-500">Location <span class="pull-right">:</span></h5>
                                                </div>
                                                {{#if admin.address}}
                                                <div class="col-9">
                                                    <h6>{{admin.address}}</h6>
                                                </div>
                                                {{else}}
                                                <div class="col-9">
                                                    <h6>Unknown</h6>
                                                </div>
                                                {{/if}}

                                            </div>
                                        </div>
                                    </div>
                                    <div id="profile-settings" class="tab-pane fade">
                                        <div class="pt-3">
                                            <div class="settings-form text-secondary">
                                                <h4 class="text-primary">Profile Setting</h4>
                                                <form method="POST" action="/profile/edit" enctype='multipart/form-data'>
                                                    <div class="form-row">
                                                        <div class="card-body media align-items-center avatar-wrapper">
                                                          <img id="avatar" src="{{#if admin.avatar}}{{admin.avatar}}{{else}}https://cdn.pixabay.com/photo/2016/08/08/09/17/avatar-1577909_960_720.png{{/if}}" alt="" class="d-block ui-w-80 img-fluid rounded-circle" style="height: 80px;">
                                                          <div class="media-body ml-4">
                                                            <label class="btn btn-outline-primary">
                                                              Upload new photo
                                                              <input id="inputAvatar" type="file" class="account-settings-fileinput" name="avatar" onChange="img_pathUrl(this)">

                                                            <div class="text-light small mt-1">Allowed JPG, GIF or PNG. Max size of 800K</div>
                                                          </div>
                                                        </div>
                                                        <hr class="border-light m-0">
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6">
                                                            <label>Email</label>
                                                            <input type="email" name="email" value="{{admin.email}}"
                                                                class="form-control">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label>Fullname</label>
                                                            <input type="text" name="fullname"
                                                                value="{{admin.fullname}}" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-8">
                                                            <label>Phone number</label>
                                                            <input name="phoneNumber" type="text" class="form-control"
                                                                value="{{admin.phoneNumber}}">
                                                        </div>
                                                        <div class="form-group col-md-4">
                                                            <label>Age</label>
                                                            <input name="age" type="number" class="form-control"
                                                                value="{{admin.age}}">
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6">
                                                            <label>Address</label>
                                                            <input type="text" name="address" value="{{admin.address}}"
                                                                class="form-control">
                                                        </div>
                                                        <div class="form-group col-md-6">
                                                            <label>Job</label>
                                                            <input name="job" type="text" class="form-control"
                                                                value="{{admin.job}}">
                                                        </div>

                                                    </div>
                                                    <button class="btn btn-primary" type="submit">Save changes</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                    <div id="account-settings" class="tab-pane fade">
                                        <div class="pt-3">
                                            <div class="settings-form text-secondary">
                                                <h4 class="text-primary">Change password</h4>
                                                <form method="POST" action="/login/change-password"
                                                    id="change-password-form">
                                                    <div class="form-row">
                                                        <div class="form-group col-md-6">
                                                            <label>Username</label>
                                                            <input type="email" name="username"
                                                                value="{{admin.username}}" class="form-control"
                                                                readonly>
                                                        </div>
                                                        <div class="form-group col-md-6" of="password">
                                                            <label>Old Password</label>
                                                            <input type="password" name="password"
                                                                placeholder="Enter old password"
                                                                class="form-control required min">
                                                            <div class="invalid-feedback animated fadeInUp"
                                                                style="display: block;"></div>
                                                        </div>
                                                        <div class="form-group col-md-6" of="newPassword">
                                                            <label>New Password</label>
                                                            <input type="password" name="newPassword"
                                                                placeholder="Enter new password"
                                                                class="form-control required min">
                                                            <div class="invalid-feedback animated fadeInUp"
                                                                style="display: block;"></div>
                                                        </div>
                                                        <div class="form-group col-md-6" of="confirmNewPassword">
                                                            <label>Confirm New Password</label>
                                                            <input type="password" name="confirmNewPassword"
                                                                placeholder="Re-enter new password"
                                                                class="form-control required min match">
                                                            <div class="invalid-feedback animated fadeInUp"
                                                                style="display: block;"></div>
                                                        </div>
                                                    </div>
                                                    <button class="btn btn-primary" type="submit">Save changes</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{!-- ALERT HERE --}}
{{#if editSuccess}}
<div class="row justify-content-end fixed-bottom">
    <div class="col-lg-6">
        <div class="alert alert-success left-icon-big alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span><i
                        class="mdi mdi-close"></i></span>
            </button>
            <div class="media">
                <div class="alert-left-icon-big">
                    <span><i class="mdi mdi-check-circle-outline"></i></span>
                </div>
                <div class="media-body">
                    <h5 class="mt-1 mb-1">Congratulations!</h5>
                    <p style="
                        color: black;
                    ">You have successfully edit this account.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
{{#if changePasswordSuccess}}
<div class="row justify-content-end fixed-bottom">
    <div class="col-lg-6">
        <div class="alert alert-success left-icon-big alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span><i
                        class="mdi mdi-close"></i></span>
            </button>
            <div class="media">
                <div class="alert-left-icon-big">
                    <span><i class="mdi mdi-check-circle-outline"></i></span>
                </div>
                <div class="media-body">
                    <h5 class="mt-1 mb-1">Congratulations!</h5>
                    <p>You have successfully changed password.</p>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
{{#if wrongPassword}}
<div class="row justify-content-end fixed-bottom">
    <div class="col-lg-6">
        <div class="alert alert-danger left-icon-big alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span><i
                        class="mdi mdi-close"></i></span>
            </button>
            <div class="media">
                <div class="alert-left-icon-big">
                    <span><i class="mdi mdi-alert"></i></span>
                </div>
                <div class="media-body">
                    <h5 class="mt-1 mb-1">Change password failed!</h5>
                    <p>Wrong password for this account</p>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}
{{/if}}
{{/if}}


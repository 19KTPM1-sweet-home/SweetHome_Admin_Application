                            {{!-- END GENERAL --}}

                            {{!-- START FEATURE --}}
                            <div class="feature-section col-12">						
                                <h4 class="feature-title">Features</h4>
                            </div>

                            <div id="editFeatureList" class="col-12">
                                <div class="d-flex align-item-center">
                                    <input id="feature-1" type="text" class="form-control" name="propertyFeature" style="width: 70%;" required>                         
                                </div>
                                <br>
                            </div>


                            <div class="col-12 add-new-feature-btn-wrapper">
                                <input id="edit-add-new-feature-btn" type="button" class="btn btn-primary" value="Add new feature">			
                            </div>


                            {{!-- END FEATURE --}}

                            {{!-- START SELLER --}}
                            <div class="seller-section col-12">						
                                <h4 class="seller-title">Seller</h4>
                            </div>

                            <div class="col-md-6 form-group">
                              <label for="editSellerName" class="form-label">Seller name</label>
                              <input type="text" class="form-control" id="editSellerName" name="sellerName" required>
                            </div>

                            <div class="col-md-6 form-group">
                              <label for="editSellerEmail" class="form-label">Email</label>
                              <input type="email" class="form-control" id="editSellerEmail" placeholder="Ex: abc@gmail.com" name="sellerEmail" required>
                            </div>

                            <div class="col-md-6 form-group">
                              <label for="editSellerPhoneNumber" class="form-label">Phone number</label>
                              <input type="tel" class="form-control" id="editSellerPhoneNumber" placeholder="Ex: 0932288755" name="sellerPhoneNumber" required>
                            </div>                    
                            {{!-- END SELLER --}}

                            <div class="modal-footer">
                                <input type="button" id="editCancelFormBtn" class="btn btn-default" data-dismiss="modal" value="Cancel">
                                <input type="submit" id="editConfirmFormBtn" class="btn btn-success confirm-btn" value="Confirm">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

